  {
    "name": "CricVet",
    "version": "1.5.0",
    "description": "An extension for advanced analysis of Cricket websites.",
	"permissions": [
		"tabs",
		"storage",
		"unlimitedStorage"],
	"background": {
      "service_worker": "background.js",
      "persistent": false,
	  "type": "module"
    },
    "action": {
      "default_popup": "popup.html",
		"default_icons": {
		  "16": "images/logo16.png",
		  "128": "images/logo128.png"
		}
    },
	"options_page": "options.html",
	"icons": {
      "16": "images/logo16.png",
      "128": "images/logo128.png"
    },
	"content_scripts": [
	   {
		 "matches": ["<all_urls>"],
		 "run_at": "document_start",
		 "js": ["lodash.min.js", "bootstrap/js/jquery-3.5.1.js", "contentScript.js"]
	   }
	],
	"web_accessible_resources": [{
		"resources": ["res/alert.wav"],
		"matches": ["<all_urls>"]
	}],
    "manifest_version": 3
  }